@startuml Manage User Profile

rectangle "Manage User Profile" {
    start
    :User accesses profile settings;
    :View current profile information;
    :Edit profile details;
    if (Changes made?) then (yes)
    :Save changes;
    :Update profile data;
    else (no)
    :Discard changes;
    :View updated profile information;
    endif
    stop
}
@enduml
